# ==============================================================================
# DocMind Backend configuration
# ==============================================================================

# ── App ───────────────────────────────────────────────────────────────────────
DEBUG=True
LOG_LEVEL=INFO

# ── CORS ──────────────────────────────────────────────────────────────────────
FRONTEND_ORIGIN=http://localhost:3000

# ── Supabase (Get from Dashboard -> Project Settings -> API) ──────────────────
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# ── Redis / Celery ────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
# CELERY_BROKER_URL defaults to REDIS_URL if empty

# ── AI Providers ──────────────────────────────────────────────────────────────
# Available providers: gemini, openai, qwen
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.5-flash
EMBEDDING_PROVIDER=gemini
EMBEDDING_MODEL=gemini-embedding-001

# Provide the key(s) for the active provider(s)
GOOGLE_API_KEY=your-google-api-key
# OPENAI_API_KEY=
# QWEN_API_KEY=

# ── Processing Limits ─────────────────────────────────────────────────────────
MAX_FILE_SIZE_MB=50
CHUNK_SIZE_TOKENS=512
CHUNK_OVERLAP_TOKENS=64
TOP_K_RETRIEVAL=10
